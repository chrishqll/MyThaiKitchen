<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".confirmOrder">

    <ImageButton
            android:id="@+id/back"
            android:background="@drawable/back"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:translationY="-354dp"
            android:translationX="-139dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    <ImageButton
            android:id="@+id/currentbasket"
            android:background="@drawable/basketicon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:translationY="140dp"
            android:translationX="0dp"
            android:layout_width="130dp"
            android:layout_height="130dp"/>

    <ImageButton
            android:id="@+id/confirmBt"
            android:background="@drawable/rednext"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:translationY="290dp"
            android:layout_width="130dp"
            android:layout_height="130dp"/>

    <TextView
            android:text="CONFIRM ORDER"
            android:textSize="40dp"
            android:id="@+id/text"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratblack"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:translationY="-275dp"
            android:translationX="0dp"
            android:layout_width="300dp"
            android:layout_height="150dp"/>

</RelativeLayout>